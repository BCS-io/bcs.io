#!/usr/bin/env bash

#
# dns
#

print_usage() {
  printf "\n"
  printf "DNS lookup project wrapper:\n\n"
  printf "  d development server \n"
  printf "  h this help message \n"
  printf "  p production server\n"
  printf "\n"
  printf "Example dbg_nmap -p\n"
}

printf "Dig $server\n"

options=':dhps'
while getopts $options option
do
  case $option in
    d) dig 'development.bcs.io' ;;
    h) print_usage
       exit 1 ;;
    p) dig 'bcs.io' ;;
    *) print_usage
       exit 1;;
  esac
done
