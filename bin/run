#!/usr/bin/env bash

option=''
workspace=''
terraform_action='-b'

terraform_project_path="./terraform/project"
ip_address=''

print_usage() {
  printf "***************************************************\n"
  printf "*                  BCS.io                         *\n"
  printf "***************************************************\n\n"
  printf "Terraform bash script wrapper\n\n"
  printf "Runs terraform script\n"
  printf "Workspace options are as follows - choose one:\n\n"
  printf "  -s staging\n"
  printf "  -p production\n"
  printf "\n\n"
  printf "Terraform action (optional)\n\n"
  printf "  -a apply\n"
  printf "  -b destroy and then apply (default)\n"
  printf "  -n new\n"
  printf "\n"
  printf "Example: bin/run -s  \n"
}

print_banner() {
  printf "\n\n"
  printf "  ******************************************\n"
  printf "  *                                        *\n"
  printf "  *           Destroy Production?          *\n"
  printf "  *                                        *\n"
  printf "  ******************************************\n"
  printf "\n\n"
}

are_you_sure() {
  read -p "Continue (y/n)? " choice
  case "$choice" in
    y|Y ) printf "\nYes. Continuing...\n";;
    n|N ) printf "\nNo. Exiting\n"
          exit 1 ;;
    * ) printf "\nInvalid. Exiting\n"
        exit 1 ;;
  esac
}

while getopts 'ahnpst:' flag; do
  case "${flag}" in
    a) terraform_action="-a" ;;
    h) print_usage
       exit 1 ;;
    n) terraform_action="-n" ;;
    p) print_banner
       are_you_sure
       option="-${flag}"
       workspace='production' ;;
    s) option="-${flag}"
       workspace='staging' ;;
    *) print_usage
       exit 1;;
  esac
done

if [ -z "$workspace" ]; then
  printf "Workspace was not set. Choose a workspace option\n"
  printf " -------------------------------------------------\n\n"
fi

if (( $OPTIND == 1 )); then
  print_usage
  exit 1
fi

__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# source ${__dir}/clean ${option}
source ${__dir}/terraform "${terraform_action}" "${workspace}"
ip_address=$(cd $terraform_project_path && terraform output public_ip4)

echo $ip_address | pbcopy
echo "end"
